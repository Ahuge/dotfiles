#!/bin/bash

export KANBANFILE=~/.kanban.userstory.csv
export EDITOR="vim"
export BASHFILES="rc:functions:aliases:env"
export PATH="$HOME/bin:$PATH"
export LD_LIBRARY_PATH="$HOME/lib:$LD_LIBRARY_PATH"
export CPATH="$HOME/include:$CPATH"
export LANG=en_US.UTF-8
export TMUXINATOR_CONFIG="$HOME/.config/tmuxinator"

# Powerline
export PYTHONPATH="$PYTHONPATH:$HOME/.config/powerline"

export CMAKE_ROOT=$HOME

# vfx-rpms
export PATH="/usr/local/bin:/vfx/bin:$PATH"
export PYTHONPATH="/vfx/lib64/python2.7/site-packages:$PYTHONPATH"
export LD_LIBRARY_PATH="/usr/local/lib:/usr/local/lib64:/vfx/lib:/vfx/lib64:$LD_LIBRARY_PATH"
export CPATH="/usr/local/include:/vfx/include:$CPATH:/usr/include"

# Local Python installs
export PYTHONPATH="/usr/local/lib/python2.7/site-packages:/usr/local/lib64/python2.7/site-packages:$PYTHONPATH"
